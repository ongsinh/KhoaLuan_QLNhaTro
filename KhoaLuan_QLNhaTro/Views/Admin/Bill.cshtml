    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            background-color: #f4f6f9;
        }

        /* Header Section */
        .header {
            display: flex;
            align-items: center;
            justify-content: space-between;
            margin-bottom: 20px;
            margin-top: 20px;
        }

            .header h2 {
                font-size: 24px;
                color: #333;
            }

            .header .navigation {
                display: flex;
                align-items: center;
                gap: 10px;
            }

                .header .navigation button,
                .header .navigation select {
                    margin: 0 5px;
                    padding: 8px 12px;
                    border: none;
                    border-radius: 5px;
                    cursor: pointer;
                }

                .header .navigation button {
                    background-color: #007bff;
                    color: #fff;
                }

                .header .navigation select {
                    background-color: #fff;
                    border: 1px solid #ddd;
                }

        /* Add Button Styling */
        .actions .add-button-bill {
            font-size: 20px;
            font-weight: bold;
            background-color: #28a745;
            color: #fff;
            padding: 8px;
            width: 40px;
            height: 40px;
            display: flex;
            align-items: center;
            justify-content: center;
            border-radius: 50%;
            border: none;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

        .actions .add-button-bill {
            background-color: #28a745;
        }

        /* Filter Section */
        .filters {
            display: flex;
            align-items: center;
            gap: 10px;
            margin-bottom: 20px;
        }

            .filters input[type="checkbox"] {
                margin-right: 5px;
            }

            .filters .filter-item {
                display: flex;
                align-items: center;
            }

        /* Action Buttons */
        .actions {
            display: flex;
            gap: 10px;
            margin-bottom: 20px;
            justify-content: end;
        }

            .actions button {
                background-color: #28a745;
                color: #fff;
                border: none;
                padding: 10px 15px;
                border-radius: 5px;
                cursor: pointer;
            }

        /* Table Section */
        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 10px;
            background-color: #fff;
            border-radius: 10px;
            overflow: hidden;
        }

        table, th, td {
            border: 1px solid #ddd;
        }

        th, td {
            padding: 12px;
            text-align: left;
            color: #333;
        }

        th {
            background-color: #f7f7f7;
            font-weight: bold;
        }

        .badge {
            padding: 5px 10px;
            border-radius: 3px;
            font-size: 12px;
            color: #fff;
            text-align: center;
        }

            .badge.pending {
                background-color: #ffc107;
            }

            .badge.unpaid {
                background-color: #dc3545;
            }

            .badge.paid {
                background-color: #28a745;
            }

        /* Row Group */
        .group-header {
            background-color: #e9f4ff;
            font-weight: bold;
            text-align: left;
        }

        /* Action Icon */
        .action-menu {
            display: inline-block;
            position: relative;
        }

            .action-menu .menu-content {
                display: none;
                position: absolute;
                top: 100%;
                right: 0;
                background-color: #fff;
                box-shadow: 0 4px 8px rgba(0,0,0,0.1);
                border-radius: 5px;
                overflow: hidden;
                z-index: 1;
            }

                .action-menu .menu-content a {
                    display: block;
                    padding: 8px 12px;
                    color: #333;
                    text-decoration: none;
                }

                    .action-menu .menu-content a:hover {
                        background-color: #f1f1f1;
                    }

            .action-menu:hover .menu-content {
                display: block;
            }

        .room-status {
            font-size: 14px;
        }

        .badge-contract-ending {
            background-color: #ff6b6b;
            color: white;
        }

        .badge-contract-ended {
            background-color: #6c757d;
            color: white;
