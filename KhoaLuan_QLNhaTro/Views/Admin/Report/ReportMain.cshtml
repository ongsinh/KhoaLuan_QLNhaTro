<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Biểu đồ Doanh thu</title>
    <!-- Thêm Bootstrap CSS -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <!-- Thêm Chart.js -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <link rel="stylesheet" href="~/css/ReportMain.css" />
</head>
<body>
    <div class="container">
        <h1 class="text-center mt-5">Biểu đồ Doanh thu</h1>
        <div class="chart-container">
            <canvas id="revenueChart"></canvas>
        </div>
    </div>

    <script>
        // Dữ liệu cho biểu đồ
        const ctx = document.getElementById('revenueChart').getContext('2d');
        const revenueChart = new Chart(ctx, {
            type: 'line', // Bạn có thể thay đổi loại biểu đồ ở đây (line, bar, pie, etc.)
            data: {
                labels: ['Tháng 1', 'Tháng 2', 'Tháng 3', 'Tháng 4', 'Tháng 5', 'Tháng 6'], // Các nhãn cho trục X
                datasets: [{
                    label: 'Doanh thu', // Nhãn cho chuỗi dữ liệu
                    data: [1200, 1900, 3000, 500, 2000, 3000], // Dữ liệu cho chuỗi
                    backgroundColor: 'rgba(75, 192, 192, 0.2)', // Màu nền
                    borderColor: 'rgba(75, 192, 192, 1)', // Màu viền
                    borderWidth: 1
                }]
            },
            options: {
                responsive: true,
                scales: {
                    y: {
                        beginAtZero: true // Bắt đầu trục Y từ 0
                    }
                }
            }
        });
    </script>

    <!-- Thêm Bootstrap JS (tùy chọn) -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
