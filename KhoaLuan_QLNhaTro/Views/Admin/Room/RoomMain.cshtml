<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Quản lý danh sách phòng</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/custom.css" />
    <link rel="stylesheet" href="~/css/RoomMain.css" />
</head>
<body>
    <div class="container-fluid">
        <div class="header-buttons">
            <button class="btn btn-success"><i class="fas fa-play"></i></button>
            <button class="btn btn-primary" data-toggle="modal" data-target="#addRoomModal"><i class="fas fa-plus"></i></button>
            <button class="btn btn-outline-secondary">Ẩn/Hiện cột</button>
            <button class="btn btn-outline-secondary">Xuất excel</button>
        </div>

        <div class="filter-section">
            <i class="fas fa-filter filter-btn"></i>
            <div class="room-status-buttons">
                <button class="btn">Đang ở <span class="badge badge-pill badge-success">10</span></button>
                <button class="btn">Đang trống <span class="badge badge-pill badge-info">4</span></button>
                <button class="btn">Sắp hết hạn hợp đồng <span class="badge badge-pill badge-warning">3</span></button>
                <button class="btn">Đã quá hạn hợp đồng <span class="badge badge-pill badge-danger">2</span></button>
            </div>
        </div>

        <div class="room-table">
            <table class="table">
                <thead class="thead-light">
                    <tr>
                        <th>Tên phòng</th>
                        <th>Nhóm</th>
                        <th>Giá thuê</th>
                        <th>Tiền cọc</th>
                        <th>Khách thuê</th>
                        <th>Ngày vào ở </th>
                        <th>Thời hạn hợp đồng</th>
                        <th>Tình trạng</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>Phòng 101</td>
                        <td>Tầng 1</td>
                        <td>3,000,000 ₫</td>
                        <td>1,500,000</td>
                        <td>2 người</td>
                        <td>01/09/2024</td>
                        <td>10/12/2024</td>
                        <td><span class="status-badge status-success">Đang ở</span></td>
                        <td>
                            <i class="fas fa-ellipsis-v action-icon"></i>
                            <div class="popup-menu">
                                <a href="~/DetailRoom" ><i class="fas fa-info-circle"></i> Chi tiết phòng</a>
                                <a href="#" data-toggle="modal" data-target="#editRoomModal">
                                    <i class="fas fa-dollar-sign"></i> Sửa thông tin phòng
                                </a>
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <td>Phòng 102</td>
                        <td>Tầng 2</td>
                        <td>4,000,000 ₫</td>
                        <td>1,500,000</td>
                        <td>2 người</td>
                        <td>01/09/2024</td>
                        <td>10/11/2024</td>
                        <td><span class="status-badge status-success">Đang ở</span></td>
                        <td>
                            <i class="fas fa-ellipsis-v action-icon"></i>
                            <div class="popup-menu">
                                <a href="~/DetailRoom"><i class="fas fa-info-circle"></i> Chi tiết phòng</a>
                                <a href="#" data-toggle="modal" data-target="#editRoomModal"><i class="fas fa-dollar-sign"></i> Sửa thông tin phòng</a>
                            </div>
                        </td>
                    </tr>
                    <!-- Add more rows as needed -->
                </tbody>
            </table>
        </div>
    </div>

    <!-- Thêm phòng trọ -->
    <div class="modal fade" id="addRoomModal" tabindex="-1" role="dialog" aria-labelledby="addRoomModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="addRoomModalLabel">Thêm thông tin phòng trọ</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form id="addRoomForm">
                        <div class="form-group">
                            <label for="addRoomName">Tên phòng</label>
                            <input type="text" class="form-control" id="addRoomName" required>
                        </div>
                        <div class="form-group">
                            <label for="addRoomFloor">Tầng</label>
                            <input type="text" class="form-control" id="addRoomFloor" required>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label for="addRoomPrice">Giá thuê</label>
                                <input type="number" class="form-control" id="addRoomPrice" required>
                            </div>
                            <div class="form-group col-md-6">
                                <label for="addRoomArea">Diện tích phòng</label>
                                <input type="number" class="form-control" id="addRoomArea" required>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Đóng</button>
                    <button type="button" class="btn btn-primary" id="saveAddRoomButton">Lưu</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Sửa thông tin phòng trọ -->
    <div class="modal fade" id="editRoomModal" tabindex="-1" role="dialog" aria-labelledby="editRoomModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="editRoomModalLabel">Sửa thông tin phòng trọ</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form id="editRoomForm">
                        <div class="form-group">
                            <label for="editRoomName">Tên phòng</label>
                            <input type="text" class="form-control" id="editRoomName" required>
                        </div>
                        <div class="form-group">
                            <label for="editRoomFloor">Tầng</label>
                            <input type="text" class="form-control" id="editRoomFloor" required>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label for="editRoomPrice">Giá thuê</label>
                                <input type="number" class="form-control" id="editRoomPrice" required>
                            </div>
                            <div class="form-group col-md-6">
                                <label for="editRoomArea">Diện tích phòng</label>
                                <input type="number" class="form-control" id="editRoomArea" required>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Đóng</button>
                    <button type="button" class="btn btn-primary" id="saveEditRoomButton">Lưu</button>
                </div>
            </div>
        </div>
    </div>



            <!-- jQuery and Bootstrap JS -->
            <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
            <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

    <script>
        $(document).ready(function () {
            $('.action-icon').click(function (e) {
                e.stopPropagation(); // Ngăn việc đóng popup ngay khi bấm vào icon
                $('.popup-menu').hide(); // Ẩn tất cả các popup khác

                // Lấy vị trí của td và định vị lại popup menu
                const popupMenu = $(this).next('.popup-menu');
                const iconPosition = $(this).position();
                popupMenu.css({
                    top: iconPosition.top + $(this).outerHeight() + 5, // Căn dưới icon
                    left: iconPosition.left - 200
                }).toggle(); // Hiển thị popup tương ứng
            });

            // Đóng popup khi bấm ra ngoài
            $(document).click(function () {
                $('.popup-menu').hide();
            });


        });

    </script>
</body>
</html>
