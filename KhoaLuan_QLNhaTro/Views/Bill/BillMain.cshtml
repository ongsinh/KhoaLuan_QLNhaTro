                                    <div class="col-md-6 mb-3">
                                        <div class="card p-3">
                                            <div class="room-status badge badge-contract-ending mb-2">@room.Status</div>
                                            <h6>@room.Name</h6>
                                            <p>@room.Price</p>
                                            <button class="btn btn-close-service btn-block room-item" data-room-id="@room.Id" >Chốt</button>
                                        </div>
                                    </div>
