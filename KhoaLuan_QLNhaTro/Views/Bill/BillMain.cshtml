        function updateBill() {
            const services = [];

            // Thu thập dữ liệu từ các dịch vụ trong modal
            $('#invoiceEditModal .service-item').each(function () {
                const serviceId = $(this).data('id');
                const isChecked = $(this).find('input[type="checkbox"]').is(':checked');
                const oldNumber = $(this).find('.old-number').val();
                const newNumber = $(this).find('.new-number').val();
                const quantity = $(this).find('.quantity').val();

                if (isChecked) {
                    services.push({
                        ServiceId: serviceId,
                        OldNumber: oldNumber || null,
                        NewNumber: newNumber || null,
                        Number: quantity || null
                    });
                }
            });

            // Gán JSON dữ liệu dịch vụ vào input ẩn
            $("#servicesData").val(JSON.stringify(services));

            // Thu thập dữ liệu hóa đơn
            const createAt = $('#DateCreate').val();  // Ngày lập hóa đơn
            const paymentDate = $('#DatePay').val(); // Hạn đóng tiền
            const billId = $('#billId').val();       // ID hóa đơn
            const servicesData = $("#servicesData").val(); // JSON dịch vụ

            // Dữ liệu gửi đến server
            const data = {
                billId: billId,
                createAt: createAt,
                paymentDate: paymentDate,
                servicesData: JSON.parse(servicesData) // Chuyển đổi lại từ JSON string
            };

            // Gửi yêu cầu AJAX để cập nhật hóa đơn
            $.ajax({
                url: '/Bill/UpdateBill', // Endpoint trên server
                type: 'POST',
                contentType: 'application/json', // Kiểu dữ liệu gửi
                data: JSON.stringify(data), // Chuyển đổi dữ liệu sang JSON string
                success: function (response) {
                    if (response.success) {
                        alert('Cập nhật hóa đơn thành công!');
                        $('#invoiceEditModal').modal('hide'); // Đóng modal
                    } else {
                        alert(response.message); // Hiển thị thông báo lỗi từ server
                    }
                },
                error: function (error) {
                    console.error('Không thể cập nhật hóa đơn:', error);
                    alert('Đã xảy ra lỗi khi cập nhật hóa đơn.');
                }
            });
        }

