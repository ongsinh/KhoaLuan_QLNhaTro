<!DOCTYPE html>
@model List<KhoaLuan_QLNhaTro.Models.Contract>

<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Quản lý danh sách khách thuê</title>
    @* <link href="https://stackpath.bootstrapcdn.com/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet"> *@
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link href="~/css/contractmain.css" rel="stylesheet" />
</head>
<body>
    <div class="container mt-4">

        <div class="header-section">
            <div class="title-section">
                <h1>Tất cả hợp đồng</h1>
                <p class="subtitle">Danh sách hợp đồng được tạo khi thêm phiên ở mới</p>
            </div>
            <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#contractModal">+</button>
        </div>
        <div class="filter-section">
            <input type="text" class="search-bar" placeholder="Tìm kiếm hợp đồng...">
        </div>


        <div class="table-section">
            <table class="table table-borderless">
                <thead>
                    <tr>
                        <th>Tên phòng</th>
                        @* <th>Thành viên</th> *@
                        <th>Giá thuê</th>
                        <th>Tiền cọc</th>
                        <th>Ngày lập</th>
                        <th>Ngày vào ở </th>
                        <th>Thời hạn hợp đồng</th>
                        <th>Tình trạng</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var contract in Model)
                    {
                        <tr>
                            <td>
                                @contract.Room.Name<br>
                                <small>Đại diện: @contract.User.Name</small>
                            </td>
                            @* <td>@contract.User người</td> *@
                            <td>@contract.Room.Price</td>
                            <td>@contract.Deposit</td>
                            <td>@DateTime.Now.ToString("dd/MM/yyyy")</td>
                            <td>@contract.StartDate.ToString("dd/MM/yyyy")</td>
                            <td>@contract.Time tháng</td>
                            <td>
                                <span class="status-active">@contract.Status</span>
                            </td>
                            <td class="options-icon" onclick="toggleDropdown(this)">
                                <i class="fas fa-ellipsis-v"></i>
                                <div class="dropdown">
                                    <a href="javascript:void(0)" onclick="openEditModal(event)">Sửa khách thuê</a>
                                    <a href="javascript:void(0)" onclick="openDeleteModal(event)">Xóa khách thuê</a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="modal fade" id="contractModal" tabindex="-1" aria-labelledby="contractModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-lg">
                <div class="modal-content">
                    <!-- Modal Header -->
                    <div class="modal-header">
                        <h5 class="modal-title" id="contractModalLabel">Thêm hợp đồng mới</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>

                    <!-- Modal Body -->
                    <div class="modal-body">
                        <div class="row">
                            <!-- Danh sách phòng -->
                            <div class="col-md-4">
                                <h6>Danh sách phòng</h6>
                                <div class="list-group">
                                    <label class="list-group-item">
                                        <input class="form-check-input room-checkbox" type="radio" name="room" value="3" />
                                        Phòng 3
                                        <span class="badge bg-success float-end">Đang trống</span>
                                        <div class="small text-muted">1.500.000 ₫</div>
                                    </label>
                                    <label class="list-group-item">
                                        <input class="form-check-input room-checkbox" type="radio" name="room" value="5" />
                                        Phòng 5
                                        <span class="badge bg-success float-end">Đang trống</span>
                                        <div class="small text-muted">1.500.000 ₫</div>
                                    </label>
                                </div>
                            </div>

                            <!-- Thông tin khách thuê -->
                            <div class="col-md-8">
                                <form id="contractForm">
                                    <h6>Thông tin khách thuê</h6>
                                    <input type="hidden" id="roomId" name="roomId">
                                    <div class="mb-3">
                                        <label for="tenantName" class="form-label">Tên người</label>
                                        <input type="text" id="tenantName" name="tenantName" class="form-control" required>
                                    </div>
                                    <div class="mb-3">
                                        <label for="tenantPhone" class="form-label">Số điện thoại</label>
                                        <input type="text" id="tenantPhone" name="tenantPhone" class="form-control" required>
                                    </div>
                                    <div class="mb-3">
                                        <label for="idNumber" class="form-label">Số căn cước</label>
                                        <input type="text" id="idNumber" name="idNumber" class="form-control" required>
                                    </div>
                                    <div class="row g-3">
                                        <div class="col-md-6">
                                            <label for="startDate" class="form-label">Ngày vào</label>
                                            <input type="date" id="startDate" name="startDate" class="form-control" required>
                                        </div>
                                        <div class="col-md-6">
                                            <label for="endDate" class="form-label">Ngày kết thúc</label>
                                            <input type="date" id="endDate" name="endDate" class="form-control">
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>

                    <!-- Modal Footer -->
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
                        <button type="button" class="btn btn-success" id="submitContract">Thêm hợp đồng</button>
                    </div>
                </div>
            </div>
        </div>


</body>
</html>
