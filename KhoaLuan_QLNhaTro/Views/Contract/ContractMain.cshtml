﻿
<!DOCTYPE html>
@model List<KhoaLuan_QLNhaTro.Models.Contract>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Quản lý danh sách khách thuê</title>
    @* <link href="https://stackpath.bootstrapcdn.com/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet"> *@
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link href="~/css/contractmain.css" rel="stylesheet" />
</head>
<body>
    <div class="container mt-4">

        <div class="header-section">
            <div class="title-section">
                <h1>Tất cả hợp đồng</h1>
                <p class="subtitle">Danh sách hợp đồng được tạo khi thêm phiên ở mới</p>
            </div>
            <button class="add-button-contract" id="addContractButton" data-id-house="@ViewBag.HouseId">+</button>
            @* <button class="add-button-contract" onclick="openModal()">+</button> *@
        </div>
        @* <div class="filter-section">
            <input type="text" class="search-bar" placeholder="Tìm kiếm hợp đồng...">
        </div> *@


        <div class="table-section">
            <table class="table table-borderless">
                <thead>
                    <tr>
                        <th>Tên phòng</th>
                        @* <th>Thành viên</th> *@
                        <th>Giá thuê</th>
                        <th>Tiền cọc</th>
                        <th>Ngày lập</th>
                        <th>Ngày vào ở </th>
                        <th>Thời hạn hợp đồng</th>
                        <th>Tình trạng</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var contract in Model)
                    {
                        <tr>
                            <td>
                                @contract.Room.Name<br>
                                <small>Đại diện: @contract.User.Name</small>
                            </td>
                            @* <td>@contract.User người</td> *@
                            <td>@contract.Room.Price.ToString("F0")</td>
                            <td>@contract.Deposit</td>
                            <td>@DateTime.Now.ToString("dd/MM/yyyy")</td>
                            <td>@contract.StartDate.ToString("dd/MM/yyyy")</td>
                            <td>@contract.Time tháng</td>
                            <td>
                                <span class="status-active">@contract.Status</span>
                            </td>
                            <td class="options-icon" onclick="toggleDropdown(this)">
                                <i class="fas fa-ellipsis-v"></i>
                                <div class="dropdown">
                                    <a href="javascript:void(0)" onclick="openEditModal(event)">Sửa khách thuê</a>
                                    <a href="javascript:void(0)" onclick="openDeleteModal(event)">Xóa khách thuê</a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- Modal -->
        <div class="modal fade" id="contractModal" tabindex="-1" aria-hidden="true">
            <div class="modal-dialog modal-lg">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">Thêm hợp đồng mới</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body" id="modalBody">
                        <!-- Nội dung được load qua AJAX -->
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
<script src="~/js/add-house.js"></script>
<script src="~/js/contractmain.js"></script>