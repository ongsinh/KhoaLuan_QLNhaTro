@model List<KhoaLuan_QLNhaTro.Models.ViewModel.HistoryViewModel>
@{
    Layout = "~/Views/Shared/LayoutUser.cshtml";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lịch sử giao dịch</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .table-container {
            margin: 20px auto;
            max-width: 1200px;
        }

        .table th {
            background-color: #007bff;
            color: #fff;
            text-transform: uppercase;
        }

        .details-link {
            text-decoration: none;
            color: #007bff;
        }

            .details-link:hover {
                text-decoration: underline;
            }
    </style>
</head>
<body>
    <div class="container table-container">
        <h2 class="text-center mb-4">Lịch sử giao dịch thanh toán hóa đơn tiền trọ</h2>
        <table class="table table-bordered table-hover text-center">
            <thead>
                <tr>
                    <th>STT</th>
                    <th>Thời điểm giao dịch</th>
                    <th>Mã giao dịch</th>
                    <th>Nội dung</th>
                    <th>Số tiền</th>
                    <th>Hình thức thanh toán</th>
                    <th>Kết quả giao dịch</th>
                    <th>#</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Count > 0)
                {
                    int index = 1;
                    foreach (var transaction in Model)
                    {
                        <tr>
                            <td>@index</td>
                            <td>@transaction.PaymentDate.ToString("dd/MM/yyyy HH:mm:ss")</td>
                            <td>@transaction.TransactionId</td>
                            <td>@* @transaction.OrderDescription *@ Thanh toán hóa đơn </td>
                            <td>@transaction.Total.ToString("N0")</td>
                            <td>@transaction.PaymentMethod</td>
                            <td>@(transaction.Success ? "Đã thanh toán thành công" : "Giao dịch thất bại")</td>
                            <td>
                                <a href="@Url.Action("HistoryDetail", "History", new { billId = transaction.billID }  )" class="details-link">Xem chi tiết</a>
                            </td>
                        </tr>
                        index++;
                    }
                }
                else
                {
                    <tr>
                        <td colspan="8">Không có giao dịch nào.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
