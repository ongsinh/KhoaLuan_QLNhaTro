<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Quản lý danh sách phòng</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/custom.css" />
    <style>
        /* Resetting and basic styles */
        body {
            font-family: Arial, sans-serif;
            background-color: #f7f7f7;
            margin: 0;
            padding: 0;
        }

        /* Header buttons styling */
        .header-buttons {
            display: flex;
            justify-content: flex-end;
            margin: 15px 0;
        }

            .header-buttons .btn {
                margin-right: 10px;
            }

        /* Filter section styling */
        .filter-section {
            display: flex;
            align-items: center;
            padding: 10px;
            background-color: #fff;
            border-radius: 8px;
            margin-bottom: 15px;
            box-shadow: 0px 2px 4px rgba(0, 0, 0, 0.1);
        }

            .filter-section .filter-btn {
                margin-right: 15px;
                font-size: 20px;
                color: #5bc0de;
            }

        .room-status-buttons {
            display: flex;
            gap: 10px;
        }

            .room-status-buttons .btn {
                background-color: #d9edf7;
                border: none;
                color: #31708f;
                border-radius: 20px;
                padding: 5px 15px;
                font-weight: bold;
            }

        /* Table styling */
        .room-table {
            background-color: #e9ecef;
            border: 1px solid #ced4da;
            border-radius: 8px;
            padding: 10px;
        }

        table {
            width: 100%;
            background-color: #fff;
            border-radius: 8px;
            overflow: hidden;
            border-collapse: collapse;
            box-shadow: 0px 2px 8px rgba(0, 0, 0, 0.1);
        }

        th, td {
            padding: 10px;
            text-align: center;
            border: 1px solid #dee2e6;
        }

        thead th {
            background-color: #f2f2f2;
            font-weight: bold;
        }

        /* Status badge styles */
        .status-badge {
            padding: 5px 10px;
            border-radius: 12px;
            color: #fff;
            font-size: 0.9em;
        }

        .status-warning {
            background-color: #f0ad4e;
        }

        .status-danger {
            background-color: #d9534f;
        }

        .status-success {
            background-color: #5cb85c;
        }

        /* Action icon and popup menu */
        /* Style cho icon hành động */
        /* Đặt lại vị trí của popup menu để căn chính xác */
        .action-icon {
            position: relative;
        }

        /* Điều chỉnh vị trí của popup menu để hiện ngay dưới icon tương ứng */
        .popup-menu {
            position: absolute;
            top: 25px; /* Giữ lại khoảng cách xuất hiện dưới icon */
            left: 50px;
            margin-top: 5px;
            display: none;
            background: #fff;
            border: 1px solid #ddd;
            border-radius: 8px;
            box-shadow: 0px 0px 5px rgba(0, 0, 0, 0.2);
            z-index: 10;
            width: 220px;
            padding: 10px 0;
        }



            .popup-menu a {
                display: flex;
                align-items: center;
                padding: 10px 15px;
                text-decoration: none;
                color: #333;
                font-size: 0.9em;
            }

                .popup-menu a:hover {
                    background-color: #f5f5f5;
                }

                .popup-menu a i {
                    margin-right: 10px;
                    font-size: 1.1em;
                }

                .popup-menu a.text-danger {
                    color: #d9534f;
                }

    </style>
</head>
<body>
    <div class="container-fluid">
        <div class="header-buttons">
            <button class="btn btn-success"><i class="fas fa-play"></i></button>
            <button class="btn btn-primary"><i class="fas fa-plus"></i></button>
            <button class="btn btn-outline-secondary">Ẩn/Hiện cột</button>
            <button class="btn btn-outline-secondary">Xuất excel</button>
        </div>

        <div class="filter-section">
            <i class="fas fa-filter filter-btn"></i>
            <div class="room-status-buttons">
                <button class="btn">Đang ở <span class="badge badge-pill badge-success">10</span></button>
                <button class="btn">Đang trống <span class="badge badge-pill badge-info">4</span></button>
                <button class="btn">Sắp hết hạn hợp đồng <span class="badge badge-pill badge-warning">3</span></button>
                <button class="btn">Đã quá hạn hợp đồng <span class="badge badge-pill badge-danger">2</span></button>
            </div>
        </div>

        <div class="room-table">
            <table class="table">
                <thead class="thead-light">
                    <tr>
                        <th>Tên phòng</th>
                        <th>Nhóm</th>
                        <th>Giá thuê</th>
                        <th>Tiền nợ</th>
                        <th>Khách thuê</th>
                        <th>Ngày lập</th>
                        <th>Ngày vào ở</th>
                        <th>Tình trạng</th>
                        <th>Tài chính</th>
                        <th>Ngày kết thúc</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>Phòng 101</td>
                        <td>Nhóm A</td>
                        <td>3,000,000 ₫</td>
                        <td>0 ₫</td>
                        <td>2 người</td>
                        <td>01/09/2024</td>
                        <td>10/09/2024</td>
                        <td><span class="status-badge status-success">Đang ở</span></td>
                        <td><span class="status-badge status-success">Đã thu tiền</span></td>
                        <td>10/09/2025</td>
                        <td>
                            <i class="fas fa-ellipsis-v action-icon"></i>
                            <div class="popup-menu">
                                <a href="#"><i class="fas fa-info-circle"></i> Chi tiết phòng</a>
                                <a href="#"><i class="fas fa-dollar-sign"></i> Thu tiền</a>
                                <a href="#"><i class="fas fa-file-invoice"></i> Lập hóa đơn</a>
                                <a href="#" class="text-danger"><i class="fas fa-trash-alt"></i> Xóa phòng</a>
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <td>Phòng 102</td>
                        <td>Nhóm B</td>
                        <td>2,500,000 ₫</td>
                        <td>500,000 ₫</td>
                        <td>1 người</td>
                        <td>05/08/2024</td>
                        <td>15/08/2024</td>
                        <td><span class="status-badge status-warning">Sắp kết thúc</span></td>
                        <td><span class="status-badge status-danger">Chưa thu tiền</span></td>
                        <td>15/08/2025</td>
                        <td>
                            <i class="fas fa-ellipsis-v action-icon"></i>
                            <div class="popup-menu">
                                <a href="#"><i class="fas fa-info-circle"></i> Chi tiết phòng</a>
                                <a href="#"><i class="fas fa-dollar-sign"></i> Thu tiền</a>
                                <a href="#"><i class="fas fa-file-invoice"></i> Lập hóa đơn</a>
                                <a href="#" class="text-danger"><i class="fas fa-trash-alt"></i> Xóa phòng</a>
                            </div>
                        </td>
                    </tr>
                    <!-- Add more rows as needed -->
                </tbody>
            </table>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script>
        $(document).ready(function () {
            $('.action-icon').click(function (e) {
                e.stopPropagation(); // Ngăn việc đóng popup ngay khi bấm vào icon
                $('.popup-menu').hide(); // Ẩn tất cả các popup khác

                // Lấy vị trí của td và định vị lại popup menu
                const popupMenu = $(this).next('.popup-menu');
                const iconPosition = $(this).position();
                popupMenu.css({
                    top: iconPosition.top + $(this).outerHeight() + 5, // Căn dưới icon
                    left: iconPosition.left
                }).toggle(); // Hiển thị popup tương ứng
            });

            // Đóng popup khi bấm ra ngoài
            $(document).click(function () {
                $('.popup-menu').hide();
            });
        });

    </script>
</body>
</html>
