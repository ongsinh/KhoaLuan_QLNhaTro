@{
    var idHouse = ViewBag.idHouse as Guid?;
    var paidBills = ViewBag.PaidBills as IEnumerable<dynamic>;
    var totalAmount = ViewBag.TotalAmount;
    var selectedMonth = ViewBag.SelectedMonth ?? DateTime.Now.Month;
    var selectedYear = ViewBag.SelectedYear ?? DateTime.Now.Year;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Thống kê doanh thu</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .revenue-table {
            margin-top: 20px;
        }

        .table-title {
            font-size: 24px;
            font-weight: bold;
            margin-bottom: 20px;
            text-align: center;
        }

        .table-green thead {
            background-color: #28a745; /* Xanh lá cây */
            color: white; /* Màu chữ trắng */
        }

        .total-row {
            font-weight: bold;
            background-color: #f8f9fa;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1 class="table-title">Thống Kê Doanh Thu</h1>
        <form method="get" action="@Url.Action("FilterByMonthAndYear", "Report", new {idHouse= idHouse, month = selectedMonth, year = selectedYear } )">
            <div class="form-row">
                <input type="hidden" name="idHouse" value="@ViewBag.idHouse" />
                <div class="col">
                    <label for="month">Chọn Tháng:</label>
                    <select id="month" name="month" class="form-control">
                        @for (int i = 1; i <= 12; i++)
                        {
                            <option value="@i" selected="@((i == selectedMonth) ? "selected" : "")">@i</option>
                        }
                    </select>
                </div>
                <div class="col">
                    <label for="year">Chọn Năm:</label>
                    <select id="year" name="year" class="form-control">
                        @for (int i = 2021; i <= 2025; i++)
                        {
                            <option value="@i" selected="@((i == selectedYear) ? "selected" : "")">@i</option>
                        }
                    </select>
                </div>
                <div class="col">
                    <label>&nbsp;</label><br />
                    <button type="submit" class="btn btn-primary">Lọc</button>
                </div>
            </div>
        </form>

        <div class="table-responsive revenue-table">
            <table class="table table-striped table-bordered table-green">
                <thead>
                    <tr>
                        <th>Tên Phòng</th>
                        <th>Ngày Lập</th>
                        <th>Tổng Tiền (VNĐ)</th>
                    </tr>
                </thead>
                <tbody>
                    @if (paidBills != null && paidBills.Any())
                    {
                        foreach (var bill in paidBills)
                        {
                            <tr>
                                <td>@bill.RoomName</td>
                                <td>@bill.CreateAt.ToString("dd/MM/yyyy")</td> <!-- Hiển thị ngày lập hóa đơn -->
                                <td>@bill.Total.ToString("N0")</td> <!-- Hiển thị tổng tiền với định dạng số -->
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="3">Không có dữ liệu</td>
                        </tr>
                    }
                </tbody>
                <tfoot>
                    <tr class="total-row">
                        <td colspan="2" class="text-end">Tổng Cộng:</td>
                        <td id="total-amount">@totalAmount.ToString("N0")</td>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <scrip>
    </script>
</body>
</html>
