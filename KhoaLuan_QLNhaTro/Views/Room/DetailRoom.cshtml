@model KhoaLuan_QLNhaTro.Models.Room
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Chi Tiết Phòng</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/DetailRoomMain.css" />
</head>
<body>

    <div class="container my-5">
        <div class="row">
            <!-- Thông tin phòng -->
            <div class="col-lg-6">
                <div class="card p-3">
                    <div class="section-title">Thông tin phòng</div>
                    <p class="text-muted">Thông tin chi tiết của phòng</p>
                    <table class="table table-borderless">
                        <tbody>
                                <tr>
                                    <th>Tên phòng</th>
                                    <td>@Model.Name</td>
                                </tr>
                                <tr>
                                    <th>Nhóm phòng</th>
                                <td>@Model.FLoorNumber</td>
                                </tr>
                                <tr>
                                    <th>Giá thuê</th>
                                <td>@Model.Price</td>
                                </tr>
                                <tr>
                                    <th>Diện tích</th>
                                <td>@Model.Acreage</td>
                                </tr>
                                <tr>
                                    <th>Ngày vào ở</th>
                                <td>@Model.Contract.StartDate.ToString("dd/MM/yyyy")</td>
                                </tr>
                                <tr>
                                    <th>Thời hạn hợp đồng</th>
                                <td>@Model.Contract.Time Tháng</td>
                                </tr>
                                <tr>
                                    <th>Trạng thái</th>
                                <td><span class="badge badge-status incomplete">@Model.Contract.Status</span></td>
                                </tr>
                                @* <tr>
                                    <th>Trạng thái tài chính</th>
                                    <td><span class="badge badge-status complete">Chưa ký thu tiền</span></td>
                                </tr> *@
                        </tbody>
                    </table>
                </div>
            </div>

            <!-- Dịch vụ sử dụng -->
            <div class="col-lg-6">
                <div class="card p-3">
                    <div class="section-title">Dịch vụ sử dụng</div>
                    <p class="text-muted">Danh sách dịch vụ sử dụng</p>
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Tên dịch vụ</th>
                                <th>Chỉ số dịch vụ</th>
                                <th>Loại</th>
                                <th>Đơn giá</th>
                            </tr>
                        </thead>
                        <tbody
                        @if (ViewBag.Services != null)
                        {
                            @foreach (var service in ViewBag.Services)
                            {
                                <tr>
                                    <td>@service.Service.Name </td>
                                    <td>Chỉ số hiện tại: 0</td>
                                    <td>Cố định</td>
                                    <td>@service.Service.Price</td>
                                </tr>
                            }
                        }
                        </tbody>
                    </table>
                </div>
            </div>

            <!-- Danh sách khách thuê -->
            <div class="col-lg-6">
                <div class="card p-3">
                    <div class="section-title">Danh sách khách thuê</div>
                    <p class="text-muted">Thông tin khách thuê của phòng</p>
                        <div class="d-flex align-items-center border rounded p-2">
                            <div>
                                <strong>@Model.User.Name</strong><br>
                            <span class="text-muted">@Model.User.Phone</span>
                            </div>
                            <div class="ms-auto">
                                <button class="btn btn-success btn-sm">Người liên hệ</button>
                                <button class="btn btn-primary btn-sm">Đại diện hợp đồng</button>
                            </div>
                        </div>
                </div>
            </div>

            @* <!-- Lịch sử hóa đơn -->
            <div class="col-lg-6">
                <div class="card p-3">
                    <div class="section-title">Lịch sử hóa đơn</div>
                    <p class="text-muted">Lịch sử thu tiền của phòng</p>
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Thông tin khách</th>
                                <th>Tháng lập phiếu</th>
                                <th>Tiền phòng</th>
                                <th>Thu/Trả tiền cọc</th>
                                <th>Tiền dịch vụ</th>
                                <th>Cộng thêm - giảm trừ</th>
                                <th>Tổng tiền</th>
                                <th>Tổng đã trả</th>
                                <th>Ngày tạo & Trạng thái</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>0868043731</td>
                                <td>9/2024</td>
                                <td>1.222.000đ</td>
                                <td>0đ</td>
                                <td>0đ</td>
                                <td>0đ</td>
                                <td>1.222.000đ</td>
                                <td>1.222.000đ</td>
                                <td>20/09/2024 <span class="badge badge-status complete">Đã thu xong</span></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div> *@
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
