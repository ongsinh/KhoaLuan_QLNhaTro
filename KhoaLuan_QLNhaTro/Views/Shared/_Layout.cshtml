<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - KhoaLuan_QLNhaTro</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/KhoaLuan_QLNhaTro.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/layout.css" />
</head>
<body>
    <div class="sidebar">
        <div class="sidebar-header">
            <div class="notification-badge">2</div>
            <div class="icon-text">
                <div class="house-icon">🏠</div>
                <div>
                    <div class="status-text">Đang quản lý</div>
                    <div class="property-name">Nhà trọ 123456789</div>
                </div>
            </div>
            <div class="add-button">+</div>
        </div>
        <a href="#"><i class="fas fa-shopping-cart"></i> POS Bán Hàng</a>
        <a href="#"><i class="fas fa-tachometer-alt"></i> Bảng điều khiển</a>
        <a href="#"><i class="fas fa-user-tie"></i> Quản lý nhân viên</a>
        <a href="#"><i class="fas fa-user"></i> Quản lý khách hàng</a> 
        <a href="#"><i class="fas fa-box"></i> Quản lý sản phẩm</a>
        <a href="#"><i class="fas fa-receipt"></i> Quản lý đơn hàng</a>
        <a href="#"><i class="fas fa-cogs"></i> Quản lý nội bộ</a>
        <a href="#"><i class="fas fa-money-check-alt"></i> Bảng kê lương</a>
        <a href="#"><i class="fas fa-chart-line"></i> Báo cáo doanh thu</a>
    </div>

    <div class="content">
        <!-- Logout Section -->
        <div class="logout-section">
            <button onclick="window.location.href='/Account/Logout'">Logout</button>
        </div>

        <div class="container">
            <main role="main">
                @RenderBody()
            </main>
        </div>
        @Html.Partial("AddHouseModal")
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        var addHouseUrl = '@Url.Action("AddHouseModal", "HomeController")'; // Thay YourControllerName bằng tên controller của bạn

        $(document).ready(function () {
            // Mở modal khi bấm vào dấu cộng
            $('.add-button').click(function () {
                $('#addHouseModal').modal('show');
            });
            $('.close, .btn-secondary').click(function () {
                $('#addHouseModal').modal('hide');
            });
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

