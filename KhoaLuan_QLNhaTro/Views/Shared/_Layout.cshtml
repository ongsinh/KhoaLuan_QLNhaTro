        <div class="sidebar-header" id="sidebarHeader">
            @* <div class="notification-badge">2</div> *@
            <div class="icon-text" id="iconText">
                <div class="house-icon" id="houseIcon">🏠</div>
                <div>
                    <div class="status-text">Đang quản lý</div>
                    <div class="property-name">
                        @ViewBag.HouseName
                    </div>
                </div>
            </div>

            <div class="add-button" id="addHouseButton">
                <i class="fas fa-plus"></i>
            </div>
        </div>
        <a href="@Url.Action("RoomMain", "Room", new { houseId = ViewBag.HouseId })"><i class="fas fa-shopping-cart"></i> Quản lý phòng</a>
        <a href="@Url.Action("BillMain", "Bill")"><i class="fas fa-tachometer-alt"></i> Quản lý hóa đơn</a>
        <a href="@Url.Action("ServiceMain", "Service", new { idHouse = ViewBag.HouseId })"><i class="fas fa-user-tie"></i> Quản lý dịch vụ</a>
        <a href="@Url.Action("AssetMain", "Asset", new { idHouse = ViewBag.HouseId })"><i class="fas fa-user"></i> Quản lý tài sản</a>
        <a href="@Url.Action("ContractMain", "Contract", new { houseId = ViewBag.HouseId })"><i class="fas fa-box"></i> Quản lý hợp đồng</a>
        <a href="@Url.Action("UserMain", "User", new { houseId = ViewBag.HouseId })"><i class="fas fa-receipt"></i> Quản lý khách thuê</a>
        <a href="@Url.Action("IncidentMain", "Incident", new { idHouse = ViewBag.HouseId })"><i class="fas fa-cogs"></i> Quản lý sự cố</a>
        <a href="@Url.Action("ReportMain", "Report")"><i class="fas fa-chart-line"></i> Báo cáo doanh thu</a>
        <a href="@Url.Action("ProfileMain", "Profile")"><i class="fas fa-chart-line"></i> Thông tin cá nhân</a>
    </div>

    <div class="content">
        <!-- Logout Section -->
        <div class="logout-section">
            <button onclick="window.location.href='/Access/Logout'">Logout</button>
        </div>

        <div class="container">
            <main role="main">
                @RenderBody()
            </main>
        </div>
        
    </div>

    <div class="modal fade" id="addHouseModal" tabindex="-1" role="dialog" aria-labelledby="addHouseModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="addHouseModalLabel">Thêm Nhà Trọ</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form id="addHouseForm" asp-action="CreateHouseAndRooms" method="post">
                        <!-- Nhập tên và địa chỉ -->
                        <div class="form-group">
                            <label for="Name">Tên Nhà Trọ</label>
                            <input type="text" class="form-control" id="Name" name="Name" placeholder="Nhập tên nhà trọ" required />
                        </div>
                        <div class="form-group">
                            <label for="Address">Địa Chỉ</label>
                            <input type="text" class="form-control" id="Address" name="Address" placeholder="Nhập địa chỉ" required />
                        </div>

                        <!-- Nhập số tầng -->
                        <div class="form-group">
                            <label for="floorNumber">Số Tầng</label>
                            <input type="number" class="form-control" id="floorNumber" name="floorNumber" placeholder="Nhập số tầng" required onchange="generateFloorInputs()" />
                        </div>

                        <!-- Các ô nhập số phòng cho từng tầng -->
                        <div id="floorInputs"></div>

                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Đóng</button>
                            <button type="submit" class="btn btn-primary">Lưu</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

     @* Hiện list *@
    <!-- House List Modal -->
    <div class="modal fade" id="houseListModal" tabindex="-1" role="dialog" aria-labelledby="houseListModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="houseListModalLabel">

                        <i class="fas fa-home"></i> Danh sách nhà trọ của bạn
                    </h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <!-- Nội dung nhà trọ sẽ được cập nhật ở đây thông qua JavaScript -->
                </div>
            </div>
        </div>
    </div>

    <script src="~/js/add-house.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    
</body>
</html>
