@{
    Layout = "~/Views/Shared/LayoutUser.cshtml";
}

@model IEnumerable<KhoaLuan_QLNhaTro.Models.Incident>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
<link href="~/css/sucomain.css" rel="stylesheet" />

<div class="container">
    
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="mb-0">Danh sách sự cố</h2>
        <a href="@Url.Action("AddSuCo", "SuCo")" class="btn btn-primary">Thêm sự cố</a>
    </div>

    @if (!Model.Any())
    {
        <p>Bạn chưa gửi sự cố nào.</p>
    }
    else
    {
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Tên sự cố</th>
                    <th>Mô tả</th>
                    <th>Trạng thái</th>
                    <th>Ngày thêm</th>
                    @* <th>Ngày dự định sửa chữa</th> *@
                    <td></td>
                </tr>
            </thead>
            <tbody>
                @foreach (var incident in Model)
                {
                    <tr>
                        <td>@incident.Name</td>
                        <td>@incident.Description</td>
                        <td>@incident.Status</td>
                        <td>@incident.CreateAt.ToShortDateString()</td>
                        @* <td>@incident.Date.ToShortDateString()</td> *@
                        <!-- Add the options icon for each incident -->
                        <td class="options-icon" onclick="toggleDropdown(this)">
                            <i class="fas fa-ellipsis-v"></i>
                            <div class="dropdown">
                                <!-- Trigger the respective modal or action -->
                                <a href="javascript:void(0);" onclick="openEditModal('@incident.Id')">Sửa sự cố</a>
                                <a href="javascript:void(0);" onclick="openDeleteModal('@incident.Id')">Xóa sự cố</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>

<!-- Edit Incident Modal -->
<div id="editIncidentModal" class="modal" tabindex="-1" role="dialog" aria-labelledby="editIncidentModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editIncidentModalLabel">Sửa sự cố</h5>
                @* <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button> *@
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body" id="modalContent">
                <!-- Edit form will be loaded here via AJAX -->
            </div>
            
        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="~/js/sucomain.js"></script>
