@model KhoaLuan_QLNhaTro.ViewModel.UserHouseViewModel

@{
    ViewData["Title"] = "UserMain";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
<link href="~/css/usermain.css" rel="stylesheet" />

<div class="container mt-4">
        
    <div class="header-section">
        <div class="title-section">
            <h1>Quản lý danh sách khách thuê</h1>
            <p class="subtitle">Tất cả danh sách khách thuê trong Nhà trọ của bạn</p>
        </div>
        <button class="add-button-account" onclick="openModal()">+</button>
    </div>
    <div class="filter-section">
        <input type="text" class="search-bar" placeholder="Tìm kiếm tài khoản...">
    </div>
        
    <div class="table-section">
        <table class="table table-borderless">
            <thead>
                <tr>
                    <th>Tên khách hàng</th>
                    <th>Giới tính</th>
                    <th>Ngày sinh</th>
                    <th>Số điện thoại</th>
                    <th>Địa chỉ </th>
                    <th>Số CMND/CCCD</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Users != null && Model.Users.Any())
                {
                    foreach (var user in Model.Users)
                    {
                        <tr>
                            <td>@user.Name</td>
                            <td>@user.Gender</td>
                            <td>@user.Dob.ToString("dd/MM/yyyy")</td>
                            <td>@user.Account.Phone</td>
                            <td>@user.Address</td>
                            <td>@user.CCCD</td>
                            <td class="options-icon" onclick="toggleDropdown(this)">
                                <i class="fas fa-ellipsis-v"></i>
                                <div class="dropdown">
                                    <a href="#" onclick="openEditModal(event)">Sửa khách thuê</a>
                                    <a href="#" onclick="openDeleteModal(event)">Xóa khách thuê</a>
                                </div>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="7">Không có dữ liệu khách thuê</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
